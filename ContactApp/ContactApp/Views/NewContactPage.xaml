<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactApp.Views.NewContactPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Name" Text="{Binding NewContact.FullName}"/>
            <Entry Placeholder="Phone Number" Text="{Binding NewContact.PhoneNumber}" />
            <Button Command="{Binding AddContactCommand}" Text="Add Contact">
            
            </Button>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>